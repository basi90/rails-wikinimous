<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="d-flex">
        <h1><%= @article.title %></h1>

        <%= link_to "<i class='fa-solid fa-pen-to-square'></i>".html_safe, edit_article_path(@article), class: "btn btn-warning" %>
        <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe, article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= @article.content %>
        </div>
      </div>

      <%= link_to "Back", articles_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
