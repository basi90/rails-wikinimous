<h1><%= @article.title %></h1>

<%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<div class="panel panel-default">
  <div class="panel-body">
    <%= @article.content %>
  </div>
</div>

<%= link_to "Edit", edit_article_path(@article), class: "btn btn-warning" %>
<%= link_to "Back", articles_path, class: "btn btn-default" %>
